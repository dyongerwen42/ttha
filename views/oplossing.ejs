<style>
    /* Root colors and fonts */
    :root {
        --tg-body-font-family: 'DM Sans', sans-serif;
        --tg-primary-color: #D32F2F; /* Festive Red */
        --tg-secondary-color: #388E3C; /* Festive Green */
        --tg-body-font-color: #555555; /* Dark Gray */
        --tg-heading-font-color: #212121; /* Almost Black */
        --tg-section-background: #FFFAF0; /* Floral White for a cozy feel */
    }
    
    /* Form Styling */
    .prijsvraag-form {
        background-color: var(--tg-section-background);
        padding: 50px;
        border-radius: 20px;
        max-width: 900px;
        margin: auto;
        font-family: var(--tg-body-font-family);
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
        position: relative;
    }
    
    /* Festive Decorations */
    .prijsvraag-form::before,
    .prijsvraag-form::after {
        content: '';
        position: absolute;
        width: 50px;
        height: 50px;
        background-image: url('/assets/img/prijsvraag/snowflake.png');
        background-size: contain;
        background-repeat: no-repeat;
        opacity: 0.7;
    }
    
    .prijsvraag-form::before {
        top: -25px;
        left: -25px;
    }
    
    .prijsvraag-form::after {
        bottom: -25px;
        right: -25px;
    }
    
    h2.title {
        font-size: 36px;
        font-weight: bold;
        color: var(--tg-heading-font-color);
        margin-bottom: 25px;
        text-align: center;
        position: relative;
    }
    
    h2.title::after {
        content: '';
        width: 60px;
        height: 60px;
        background-image: url('/assets/img/prijsvraag/christmas-star.png');
        background-size: contain;
        background-repeat: no-repeat;
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
    }
    
    p.description {
        text-align: center;
        font-size: 20px;
        color: var(--tg-body-font-color);
        margin-bottom: 50px;
    }
    
    .form-group {
        margin-bottom: 35px;
    }

    .form-group label {
        display: block;
        font-weight: 700;
        margin-bottom: 10px;
        color: var(--tg-heading-font-color);
    }
    
    .form-control {
        width: 100%;
        padding: 18px;
        border: 1px solid var(--tg-body-font-color);
        border-radius: 12px;
        font-size: 18px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        background-color: #FFFFFF;
    }
    
    .form-control:focus {
        border-color: var(--tg-primary-color);
        outline: none;
        box-shadow: 0 0 10px rgba(211, 47, 47, 0.3);
    }
    
    .prijsvraag-btn {
        background-color: var(--tg-primary-color);
        color: white;
        padding: 18px 50px;
        border: none;
        border-radius: 12px;
        font-size: 20px;
        cursor: pointer;
        width: 100%;
        max-width: 300px;
        margin: 40px auto 0;
        display: block;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.2s ease;
        font-weight: bold;
    }
    
    .prijsvraag-btn:hover {
        background-color: var(--tg-secondary-color);
        transform: translateY(-3px);
    }

    /* Prizes Section */
    .prizes-section {
        background-color: var(--tg-section-background);
        padding: 50px;
        border-radius: 20px;
        max-width: 900px;
        margin: 80px auto;
        text-align: center;
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
        position: relative;
    }
    
    .prizes-section::before,
    .prizes-section::after {
        content: '';
        position: absolute;
        width: 50px;
        height: 50px;
        background-image: url('/assets/img/prijsvraag/holly.png');
        background-size: contain;
        background-repeat: no-repeat;
        opacity: 0.8;
    }
    
    .prizes-section::before {
        top: -25px;
        left: -25px;
    }
    
    .prizes-section::after {
        bottom: -25px;
        right: -25px;
    }
    
    .prizes-section h3 {
        font-size: 28px;
        font-weight: bold;
        color: var(--tg-heading-font-color);
        margin-bottom: 30px;
        position: relative;
    }
    
    .prizes-section h3::after {
        content: '';
        width: 50px;
        height: 50px;
        background-image: url('/assets/img/prijsvraag/gift-box.png');
        background-size: contain;
        background-repeat: no-repeat;
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
    }
    
    .prizes-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .prizes-list li {
        font-size: 20px;
        color: var(--tg-body-font-color);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .prizes-list li i {
        margin-right: 15px;
        color: var(--tg-primary-color);
        font-size: 24px;
    }

    /* Owner Contact */
