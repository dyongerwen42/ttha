// Move to the next step
function nextStep(step) {
    currentStep = step;

    // Hide all steps and show the current one
    document.querySelectorAll(".form-step").forEach(function(formStep) {
        formStep.classList.remove("active");
    });
    document.getElementById("step" + step).classList.add("active");

    // Update the progress bar
    updateProgressBar(step);

    // Load dynamic service fields when moving to step 2
    if (step === 2) {
        loadServiceFields();
    }

    // Scroll to the top of the page
    window.scrollTo({
        top: 0,
        behavior: "smooth" // Smooth scrolling for better UX
    });
}

function backToSimple() {
    currentStep = 0;
    document.querySelectorAll(".form-step").forEach(function(formStep) {
        formStep.classList.remove("active");
    });
    document.getElementById("step0").classList.add("active");
    const dynamicFields = document.getElementById("dynamicFields");
    dynamicFields.innerHTML = ""; // Clear the dynamic fields
    const serviceSelect = document.getElementById("service");
    serviceSelect.value = ""; // Reset service dropdown
    updateProgressBar(0);
}

function updateProgressBar(step) {
    const progressBar = document.getElementById('progress-bar');
    let progress = (step / 3) * 100;
    progressBar.style.width = progress + "%";
}

function loadServiceFields() {
    const selectedService = document.getElementById("service").value;
    const dynamicFields = document.getElementById("dynamicFields");
    dynamicFields.innerHTML = ""; // Clear previous fields
    const service = diensten.services.find((s) => s.name === selectedService);
    if (service && service.preset.questions) {
        service.preset.questions.forEach((question) => {
            let field;
            if (question.type === "text") {
                field = `<div class="form-group">
                            <label>${question.label}</label>
                            <input type="text" class="form-control dynamic-field" data-label="${question.label}" ${question.required ? "required" : ""}>
                         </div>`;
            } else if (question.type === "select") {
                let options = question.options.map((option) => `<option value="${option}">${option}</option>`).join("");
                field = `<div class="form-group">
                            <label>${question.label}</label>
                            <select class="form-control dynamic-field" data-label="${question.label}" ${question.required ? "required" : ""}>${options}</select>
                         </div>`;
            } else if (question.type === "textarea") {
                field = `<div class="form-group">
                            <label>${question.label}</label>
                            <textarea class="form-control dynamic-field" data-label="${question.label}" ${question.required ? "required" : ""}></textarea>
                         </div>`;
            } else if (question.type === "file") {
                field = `<div class="form-group">
                            <label>${question.label}</label>
                            <input type="file" class="form-control dynamic-field" data-label="${question.label}" ${question.required ? "required" : ""}>
                         </div>`;
            }
            dynamicFields.insertAdjacentHTML("beforeend", field);
        });
    }
}

// Initialize services on page load
function loadServices() {
    const serviceSelect = document.getElementById('service');
    serviceSelect.innerHTML = '<option value="">--Kies een dienst--</option>';
    diensten.services.forEach(service => {
        let option = document.createElement('option');
        option.value = service.name;
        option.text = service.name;
        serviceSelect.add(option);
    });
}

// Handle form submission
async function handleFormSubmit(event) {
    event.preventDefault();

    const formData = new FormData(event.target);
    const dynamicFields = {};

    // Collect dynamic fields
    document.querySelectorAll(".dynamic-field").forEach(field => {
        if (field.type === 'file') {
            formData.append(field.getAttribute('data-label'), field.files[0]);
        } else {
            dynamicFields[field.getAttribute('data-label')] = field.value;
        }
    });

    formData.append('dynamic_fields', JSON.stringify(dynamicFields));

    try {
        const response = await fetch('/submit-contact', {
            method: 'POST',
            body: formData
        });

        if (response.ok) {
            alert('Formulier succesvol verzonden!');
        } else {
            alert('Er is een fout opgetreden bij het verzenden van het formulier.');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Er is eddddden fout opgetreden bij het verzenden van het formulier.');
    }
}

